  <h2 class="todo_list_title"><%= link_to todolist.title, todolist %></h2>
  <p class="todo_list_sub_title"><%= todolist.description %></p>
</div>
<% end %>
<div class="links">
  <%= link_to "New Todo List", new_todolist_path %>
</div>
<p id="notice"><%= notice %></p>

